<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp">
    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="100dp">

        <TextView
            android:id="@+id/math_level_id"
            android:layout_width="84dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="210dp"
            android:layout_marginEnd="6dp"
            android:layout_marginBottom="17dp"
            android:elevation="100dp"
            android:outlineProvider="none"
            android:text="@string/math_level"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/math_text"
            android:layout_width="84dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="52dp"
            android:layout_marginEnd="164dp"
            android:layout_marginBottom="37dp"
            android:elevation="100dp"
            android:outlineProvider="none"
            android:text="@string/Math_Button"
            android:textColor="@android:color/black"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/math_level_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="226dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="43dp"
            android:elevation="100dp"
            android:outlineProvider="none"
            android:src="@drawable/child_icon"
            android:contentDescription="TODO" />



    </RelativeLayout>

</androidx.cardview.widget.CardView>