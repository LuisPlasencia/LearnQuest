<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/quizunit_cardview"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_margin="5dp"
        android:elevation="8dp"
        app:cardBackgroundColor="#eeeeee"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/quizunite_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                tools:text="Quiz Title"
                android:layout_margin="20dp"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/quizunite_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                tools:text="Description of Quiz"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="20dp">

                <Button
                    android:id="@+id/quizunit_solve_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:background="@drawable/button_selector"
                    android:text="@string/T1_Topic_solve_button"/>

                <Space
                    android:layout_width="30dp"
                    android:layout_height="match_parent"/>

                <Button
                    android:id="@+id/quizunit_practica_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:background="@drawable/button_selector"
                    android:shadowColor="@color/colorBlack"
                    android:text="@string/T1_Topic_practise_button"/>

                <Space
                    android:layout_width="30dp"
                    android:layout_height="match_parent"/>

                <ImageView
                    android:id="@+id/quizunit_grade"
                    android:padding="10dp"
                    android:layout_width="85dp"
                    android:layout_height="50dp"
                    app:srcCompat="@drawable/grade" />

            </LinearLayout>
        </LinearLayout>



    </androidx.cardview.widget.CardView>
</LinearLayout>