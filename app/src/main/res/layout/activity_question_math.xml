<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/question_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:popupTheme="@style/Theme.AppCompat.Light" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="2dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/math_quiz_enter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/button_selector"
                android:onClick="onEnterButtonClickedMath"
                android:text="@string/button_enter_mathQuiz"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.9"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/math_quiz_5"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginBottom="96dp"
                android:text="@string/button_five"
                android:onClick="onNumberClicked"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@drawable/button_selector"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.9"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/math_quiz_8"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginBottom="16dp"
                android:text="@string/button_eight"
                android:onClick="onNumberClicked"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@drawable/button_selector"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/math_quiz_4"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginBottom="96dp"
                android:text="@string/button_four"
                android:onClick="onNumberClicked"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@drawable/button_selector"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.7"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/math_quiz_clean"
                android:layout_width="70dp"
                android:layout_height="36dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/button_selector"
                android:onClick="onCleanButton"
                android:text="@string/button_clean_mathQuiz"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.513"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/math_quiz_2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginBottom="96dp"
                android:text="@string/button_two"
                android:onClick="onNumberClicked"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@drawable/button_selector"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.3"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/math_quiz_7"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginBottom="16dp"
                android:text="@string/button_seven"
                android:onClick="onNumberClicked"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@drawable/button_selector"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.3"
                app:layout_constraintStart_toStartOf="parent" />


            <Button
                android:id="@+id/math_quiz_3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginBottom="96dp"
                android:text="@string/button_three"
                android:onClick="onNumberClicked"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@drawable/button_selector"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/math_quiz_9"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginBottom="16dp"
                android:text="@string/button_nine"
                android:onClick="onNumberClicked"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@drawable/button_selector"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.7"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/math_quiz_1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginBottom="96dp"
                android:text="@string/button_one"
                android:onClick="onNumberClicked"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@drawable/button_selector"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.1"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/math_quiz_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/button_selector"
                android:onClick="onNextButtonClickedMath"
                android:text="@string/button_next_mathQuiz"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/math_quiz_6"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginBottom="16dp"
                android:text="@string/button_six"
                android:onClick="onNumberClicked"
                android:background="@drawable/button_selector"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.1"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/math_quiz_0"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginBottom="16dp"
                android:text="@string/button_zero"
                android:onClick="onNumberClicked"
                android:background="@drawable/button_selector"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.9"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/math_quiz_hint"
                android:layout_width="70dp"
                android:layout_height="36dp"
                android:layout_marginTop="44dp"
                android:background="@drawable/button_selector"
                android:onClick="onHintButton"
                android:text="@string/button_hint_mathQuiz"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.513"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="341dp"
        android:layout_marginTop="36dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/cardView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/app_bar">

        <TextView
            android:id="@+id/question_math_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:gravity="center"
            android:text="@string/question_number_text"
            android:textColor="@color/colorGray"
            android:textSize="24sp"
            tools:text="Question X" />

        <TextView
            android:id="@+id/mathTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:gravity="center"
            android:text="@string/question_text"
            android:textColor="@color/colorBlack"
            android:textSize="24sp"
            tools:text="Question X" />

        <TextView
            android:id="@+id/user_answer_math"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:gravity="center"
            android:hint="@string/empty_string"
            android:inputType="number"
            android:selectAllOnFocus="false"
            android:textColor="@color/colorBlack"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/answer_math"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:gravity="center"
            android:hint="@string/empty_string"
            android:selectAllOnFocus="false"
            android:textColor="@color/colorBlack"
            android:textSize="16sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>