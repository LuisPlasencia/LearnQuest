<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="es.ulpgc.eite.da.learnquest">

    <application
        android:allowBackup="true"
        android:name=".app.AppMediator"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".login.LoginActivity"
            android:theme="@style/Theme.Design.NoActionBar"
            android:screenOrientation="portrait"
            tools:ignore="LockedOrientationActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".quests.QuestsActivity">
        </activity>

        <activity android:name=".quizUnit.QuizUnitActivity"
            android:theme="@style/Theme.Design.NoActionBar">
        </activity>

        <activity
            android:name=".question.QuestionActivity"
            android:theme="@style/Theme.Design.NoActionBar">
        </activity>

        <activity
            android:name=".profile.ProfileActivity">
        </activity>

        <activity
            android:name=".hint.HintActivity">
        </activity>

        <activity
            android:name=".finalQuiz.FinalQuizActivity"
            android:theme="@style/Theme.Design.NoActionBar">
        </activity>

        <activity
            android:name=".logros.LogrosActivity"
            android:theme="@style/Theme.Design.NoActionBar">
        </activity>

    </application>

</manifest>